@page "/Assignments/{ID:int}"
@model A.C.E.S.Pages.Courses.Assignments.AssignmentModel
@{
    ViewData["Title"] = Model.Assignment.Name;
}

<!--Need to add proper edit page for assignment-->
<form>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Assignment.Name" class="control-label"></label>
        <input asp-for="Assignment.Name" class="form-control" value="@Model.Assignment.Name" />
        <span asp-validation-for="Assignment.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Assignment.RepositoryUrl" class="control-label"></label>
        <input asp-for="Assignment.RepositoryUrl" class="form-control" value="@Model.Assignment.RepositoryUrl" />
        <span asp-validation-for="Assignment.RepositoryUrl" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Assignment.AssignmentCode" class="control-label"></label>
        <input asp-for="Assignment.AssignmentCode" class="form-control" value="@Model.Assignment.AssignmentCode" />
        <span asp-validation-for="Assignment.AssignmentCode" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Assignment.CourseId" class="control-label"></label>
        <input asp-for="Assignment.CourseId" class="form-control" value="@Model.Assignment.CourseId" />
        <span asp-validation-for="Assignment.CourseId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Add" class="btn btn-primary" />
        <input type="button" value="Cancel" />
    </div>
</form>
