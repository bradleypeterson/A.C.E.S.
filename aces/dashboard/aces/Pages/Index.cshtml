    <canvas id="myChart"></canvas>
</div>
<script>
     var ctx = document.getElementById('myChart').getContext('2d');
     var myChart = new Chart(ctx, {
         type: 'pie',
         data: {
             labels: ['Highly Suspicious', 'Suspicious', 'Not Suspicious'],
             datasets: [{
                 label: 'Suspicious Status',
                 data: [2,4,20],
                 backgroundColor: [
                     'rgba(255, 0, 0, 1)',
                     'rgba(255, 255, 0, 1)',
                     'rgba(0, 200, 0, 1)'
                 ],
                 borderWidth: 0
             }]
         },
         options: {
             title: {
                 display: true,
                 text: "Current Academic Standings"
             },
             legend:{
                 display: false,
             },
             align: "left"
         }
     });
     document.getElementById('myChart').onclick = function(e){
         var index = myChart.getElementsAtEvent(e)[0]._index
         console.log(myChart.data.labels[index])
     }
