@model ACES.Models.Assignment

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

<h4>Assignment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RepositoryUrl" class="control-label"></label>
                <input asp-for="RepositoryUrl" class="form-control" />
                <span asp-validation-for="RepositoryUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AssignmentCode" class="control-label"></label>
                <input asp-for="AssignmentCode" class="form-control" />
                <span asp-validation-for="AssignmentCode" class="text-danger"></span>
            </div>
                <input name="CourseId" value="@ViewBag.CourseId" type="hidden" />
            <div class="form-group">
                <label asp-for="PointsPossible" class="control-label"></label>
                <input asp-for="PointsPossible" class="form-control" />
                <span asp-validation-for="PointsPossible" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Courses" asp-action="CourseAssignments" asp-route-id="@ViewBag.CourseId">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
